<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stackWidgetItem"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/widget_item_border"
    android:padding="2dp">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/greyish_white">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/widgetUserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:contentDescription="@string/profile_photo" />

            <TextView
                android:id="@+id/widgetUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/username_sample"
                android:fontFamily="@font/quicksand_medium"
                android:minEms="15"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="8"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


